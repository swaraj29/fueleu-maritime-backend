generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


//////////////////////////////////////////////////////////
// ROUTES TABLE
//////////////////////////////////////////////////////////

model Route {
  id              String   @id @default(uuid())
  routeId         String
  vesselType      String
  fuelType        String
  year            Int
  ghgIntensity    Float
  fuelConsumption Float
  distance        Float
  totalEmissions  Float
  isBaseline      Boolean  @default(false)

  @@unique([routeId, year])
}

//////////////////////////////////////////////////////////
// SHIP COMPLIANCE (CB SNAPSHOT)
//////////////////////////////////////////////////////////

model ShipCompliance {
  id         String  @id @default(uuid())
  shipId     String
  year       Int
  cbGco2eq   Float
  createdAt  DateTime @default(now())

  @@unique([shipId, year])
}

//////////////////////////////////////////////////////////
// BANKED SURPLUS ENTRIES
//////////////////////////////////////////////////////////

model BankEntry {
  id            String   @id @default(uuid())
  shipId        String
  year          Int
  amountGco2eq  Float
  createdAt     DateTime @default(now())
}

//////////////////////////////////////////////////////////
// POOL
//////////////////////////////////////////////////////////

model Pool {
  id        String        @id @default(uuid())
  year      Int
  createdAt DateTime      @default(now())

  members   PoolMember[]
}

//////////////////////////////////////////////////////////
// POOL MEMBERS
//////////////////////////////////////////////////////////

model PoolMember {
  id        String   @id @default(uuid())
  poolId    String
  shipId    String
  cbBefore  Float
  cbAfter   Float

  pool      Pool     @relation(fields: [poolId], references: [id], onDelete: Cascade)

  @@index([poolId])
}